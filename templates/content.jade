.row
	.col-md-12
		if typeof tasks !== "undefined"
			table
				colgroup
					col.col-xs-1
					col.col-xs-8
					col.col-xs-3
				tbody
					each task in tasks
						tr.oneTodo(data-id=task.id)
							if task.completed()
								td.text-center.pagination-centered	
									input.center#check(type="checkbox", checked="checked")
								td.maxWidth.overLine
									h3.taskTitle=task.title()
							else
								td.text-center.pagination-centered	
									input.center#check(type="checkbox")
								td.maxWidth
									h3.taskTitle=task.title()
									
							td
								button.close.center.delete-task(aria-hidden="true", type="button") &times;
						